<% if current_user.favoing?(micropost) %>
  <%= form_for(current_user.favorelations.find_by(micropost_id: micropost.id),html: {method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'Unfavo', class: 'btn btn-danger btn-xs' %>
  <% end %>
<% else %>
  <%= form_for(current_user.favorelations.build) do |f| %>
    <%= hidden_field_tag :micropost_id,micropost.id %>
    <%= f.submit 'Favo', class: 'btn btn-primary btn-xs' %>
  <% end %>
<% end %>